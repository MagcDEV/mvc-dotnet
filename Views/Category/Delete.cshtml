@model Category

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="mb-3">
            <div>
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" disabled value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="DisplayOrder"></label>
                <input class="form-control" asp-for="DisplayOrder" value="@Model.DisplayOrder"  disabled/>
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3" style="width: 150px;">
            Delete
        </button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary mt-3" style="width: 150px">
            Back to list
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}